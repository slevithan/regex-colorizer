{
  "name": "regexcolorizer",
  "version": "1.0.0",
  "description": "Highlight regex syntax",
  "homepage": "https://slevithan.github.io/regex-colorizer/demo/",
  "author": "Steven Levithan",
  "license": "MIT",
  "type": "module",
  "exports": "./src/index.js",
  "browser": "./dist/regexcolorizer.min.js",
  "scripts": {
